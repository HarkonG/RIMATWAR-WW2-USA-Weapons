                    <li Class="PatchOperationReplace" MayRequire="Ludeon.RimWorld.Ideology">
                        <xpath>/Defs/ThingStyleDef[defName="HRK_P08Luger_Alt"]/graphicData/texPath</xpath>
                        <value>
                            <texPath>Things/Item/Equipment/WeaponRanged/HRK_P08Luger</texPath>
                        </value>
                    </li>
                    <!--<li Class="PatchOperationReplace" MayRequire="Ludeon.RimWorld.Ideology">
                        <xpath>/Defs/ThingStyleDef[defName="HRK_P08Luger_Alt"]/uiIconPath</xpath>
                        <value>
                            <uiIconPath>UI/Weapons/HRK_P08Luger</uiIconPath>
                        </value>
                    </li>-->

                </operations>
            </Operation>
        </caseTrue>
    </Operation>

