                    <!-- Base Texture -->
                    <li Class="PatchOperationReplace">
                        <xpath>/Defs/ThingDef[defName="HRK_P08Luger"]/graphicData/texPath</xpath>
                        <value>
                            <texPath>Things/Item/Equipment/WeaponRanged/HRK_P08Luger_Alt</texPath>
                        </value>
                    </li>
                    <!--<li Class="PatchOperationReplace">
                        <xpath>/Defs/ThingDef[defName="HRK_P08Luger"]/uiIconPath</xpath>
                        <value>
                            <uiIconPath>UI/Weapons/HRK_P08Luger_Alt</uiIconPath>
