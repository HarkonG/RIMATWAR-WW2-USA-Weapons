<?xml version="1.0" encoding="utf-8"?>

<Patch>


    <!-- ========== Kill recipe maker ========== -->
    <Operation Class="PatchOperationAttributeSet">
        <xpath>Defs/ThingDef[defName="HRK_MK2Grenade" or defName="HRK_M37DemoGrenade"]</xpath>
        <attribute>ParentName</attribute>
        <value>BaseWeapon</value>
    </Operation>

    <!--===== TOOLS FOR THE EMPEROR =====-->
    <Operation Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName="HRK_MK2Grenade" or defName="HRK_M37DemoGrenade"]</xpath>
        <value>
            <tools>
                <li Class="CombatExtended.ToolCE">
                    <label>Body</label>
                    <capacities>
                        <li>Blunt</li>
                    </capacities>
                    <power>2</power>
                    <cooldownTime>1.75</cooldownTime>
                    <armorPenetrationBlunt>1.0</armorPenetrationBlunt>
                    <linkedBodyPartsGroup>Base</linkedBodyPartsGroup>
                </li>
            </tools>
        </value>
    </Operation>

    <!-- ========== Mk.II (Frag) ========== -->

    <!-- Projectile -->
    <Operation Class="PatchOperationAdd">
        <xpath>Defs</xpath>
        <value>
            <ThingDef ParentName="BaseGrenadeProjectile">
                <defName>HRK_Proj_mkHRK_MK2Grenade</defName>
                <label>Mk.II frag grenade</label>
                <graphicData>
                    <texPath>Things/Projectile/HRK_MK2Grenade</texPath>
                    <graphicClass>Graphic_Single</graphicClass>
                </graphicData>
                <thingClass>CombatExtended.ProjectileCE_Explosive</thingClass>
                <projectile Class="CombatExtended.ProjectilePropertiesCE">
                    <explosionRadius>1.5</explosionRadius>
                    <damageDef>Bomb</damageDef>
                    <damageAmountBase>56</damageAmountBase>
                    <explosionDelay>60</explosionDelay>
                    <applyDamageToExplosionCellsNeighbors>true</applyDamageToExplosionCellsNeighbors>
                    <speed>10</speed>
                    <soundExplode>HRK_Explosion_FragGrenade</soundExplode>
                    <dropsCasings>true</dropsCasings>
                </projectile>
                <comps>
                    <li Class="CombatExtended.CompProperties_Fragments">
                        <fragments>
                            <Fragment_Small>40</Fragment_Small>
                        </fragments>
                    </li>
                </comps>
            </ThingDef>
        </value>
    </Operation>

    <!-- Grenade -->
    <Operation Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="HRK_MK2Grenade"]/label</xpath>
        <value>
            <label>Mk.II frag grenade</label>
        </value>
    </Operation>

    <Operation Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="HRK_MK2Grenade"]/graphicData</xpath>
        <value>
            <graphicData>
                <texPath>Things/Ammo/USA/HandGrenades/HRK_MK2Grenade</texPath>
                <graphicClass>Graphic_StackCount</graphicClass>
                <onGroundRandomRotateAngle>0</onGroundRandomRotateAngle>
            </graphicData>
        </value>
    </Operation>

    <Operation Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName="HRK_MK2Grenade"]</xpath>
        <value>
            <thingClass>CombatExtended.AmmoThing</thingClass>
            <stackLimit>75</stackLimit>
            <resourceReadoutPriority>First</resourceReadoutPriority>
        </value>
    </Operation>

    <Operation Class="PatchOperationAttributeSet">
        <xpath>Defs/ThingDef[defName="HRK_MK2Grenade"]</xpath>
        <attribute>Class</attribute>
        <value>CombatExtended.AmmoDef</value>
    </Operation>

    <Operation Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="HRK_MK2Grenade"]/comps</xpath>
        <value>
            <comps>
                <li Class="CombatExtended.CompProperties_ExplosiveCE">
                    <damageAmountBase>56</damageAmountBase>
                    <explosiveDamageType>Bomb</explosiveDamageType>
                    <explosiveRadius>1.5</explosiveRadius>
                </li>
            </comps>
        </value>
    </Operation>

    <Operation Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName="HRK_MK2Grenade"]/comps</xpath>
        <value>
            <li Class="CombatExtended.CompProperties_Fragments">
                <fragments>
                    <Fragment_Small>40</Fragment_Small>
                </fragments>
            </li>
        </value>
    </Operation>

    <Operation Class="CombatExtended.PatchOperationMakeGunCECompatible">
        <defName>HRK_MK2Grenade</defName>
        <statBases>
            <Mass>0.4</Mass>
            <Bulk>0.87</Bulk>
            <MarketValue>12.22</MarketValue>
            <RangedWeapon_Cooldown>1</RangedWeapon_Cooldown>
            <SightsEfficiency>0.65</SightsEfficiency>
        </statBases>
        <Properties>
            <label>throw Mk.II frag grenade</label>
            <verbClass>CombatExtended.Verb_ShootCEOneUse</verbClass>
            <hasStandardCommand>true</hasStandardCommand>
            <range>10.0</range>
            <minRange>4</minRange>
            <warmupTime>0.8</warmupTime>
            <noiseRadius>4</noiseRadius>
            <ai_IsBuildingDestroyer>true</ai_IsBuildingDestroyer>
            <soundCast>ThrowGrenade</soundCast>
            <targetParams>
                <canTargetLocations>true</canTargetLocations>
            </targetParams>
            <defaultProjectile>HRK_Proj_MK2Grenade</defaultProjectile>
            <onlyManualCast>true</onlyManualCast>
            <ignorePartialLoSBlocker>true</ignorePartialLoSBlocker>
            <ai_AvoidFriendlyFireRadius>7</ai_AvoidFriendlyFireRadius>
        </Properties>
        <weaponTags>
            <li>CE_AI_AOE</li>
            <li>CE_OneHandedWeapon</li>
        </weaponTags>
    </Operation>

    <!-- ========== M37 Demo Charge ========== -->

    <!-- Projectile -->
    <Operation Class="PatchOperationAdd">
        <xpath>Defs</xpath>
        <value>
            <ThingDef ParentName="BaseGrenadeProjectile">
                <defName>HRK_Proj_M37DemoGrenade</defName>
                <label>M37 demo charge</label>
                <graphicData>
                    <texPath>Things/Projectile/HRK_M37DemoGrenade</texPath>
                    <graphicClass>Graphic_Single</graphicClass>
                </graphicData>
                <thingClass>CombatExtended.ProjectileCE_Explosive</thingClass>
                <projectile Class="CombatExtended.ProjectilePropertiesCE">
                    <explosionRadius>4.1</explosionRadius>
                    <damageDef>Bomb</damageDef>
                    <damageAmountBase>324</damageAmountBase>
                    <explosionDelay>240</explosionDelay>
                    <dropsCasings>False</dropsCasings>
                    <applyDamageToExplosionCellsNeighbors>true</applyDamageToExplosionCellsNeighbors>
                    <speed>3</speed>
                </projectile>
            </ThingDef>
        </value>
    </Operation>

    <!-- Grenade -->
    <Operation Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="HRK_M37DemoGrenade"]/label</xpath>
        <value>
            <label>M37 demo charge</label>
        </value>
    </Operation>

    <Operation Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="HRK_M37DemoGrenade"]/graphicData</xpath>
        <value>
            <graphicData>
                <texPath>Things/Ammo/USA/HandGrenades/HRK_M37DemoGrenade</texPath>
                <graphicClass>Graphic_StackCount</graphicClass>
                <onGroundRandomRotateAngle>0</onGroundRandomRotateAngle>
            </graphicData>
        </value>
    </Operation>

    <Operation Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName="HRK_M37DemoGrenade"]</xpath>
        <value>
            <thingClass>CombatExtended.AmmoThing</thingClass>
            <stackLimit>10</stackLimit>
            <resourceReadoutPriority>First</resourceReadoutPriority>
        </value>
    </Operation>

    <Operation Class="PatchOperationAttributeSet">
        <xpath>Defs/ThingDef[defName="HRK_M37DemoGrenade"]</xpath>
        <attribute>Class</attribute>
        <value>CombatExtended.AmmoDef</value>
    </Operation>

    <Operation Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="HRK_M37DemoGrenade"]/comps</xpath>
        <value>
            <comps>
                <li Class="CombatExtended.CompProperties_ExplosiveCE">
                    <damageAmountBase>56</damageAmountBase>
                    <explosiveDamageType>Bomb</explosiveDamageType>
                    <explosiveRadius>1.5</explosiveRadius>
                </li>
            </comps>
        </value>
    </Operation>

    <Operation Class="CombatExtended.PatchOperationMakeGunCECompatible">
        <defName>HRK_M37DemoGrenade</defName>
        <statBases>
            <Mass>0.4</Mass>
            <Bulk>0.87</Bulk>
            <MarketValue>12.22</MarketValue>
            <RangedWeapon_Cooldown>1</RangedWeapon_Cooldown>
            <SightsEfficiency>0.65</SightsEfficiency>
        </statBases>
        <Properties>
            <label>throw M37 demo charge</label>
            <verbClass>CombatExtended.Verb_ShootCEOneUse</verbClass>
            <hasStandardCommand>true</hasStandardCommand>
            <range>5.0</range>
            <warmupTime>2.1</warmupTime>
            <noiseRadius>4</noiseRadius>
            <ai_IsBuildingDestroyer>true</ai_IsBuildingDestroyer>
            <soundCast>ThrowGrenade</soundCast>
            <targetParams>
                <canTargetLocations>true</canTargetLocations>
            </targetParams>
            <defaultProjectile>HRK_Proj_M37DemoGrenade</defaultProjectile>
            <onlyManualCast>true</onlyManualCast>
            <ignorePartialLoSBlocker>true</ignorePartialLoSBlocker>
        </Properties>
        <weaponTags Inherit="False">
            <li>CE_OneHandedWeapon</li>
        </weaponTags>
    </Operation>

</Patch>